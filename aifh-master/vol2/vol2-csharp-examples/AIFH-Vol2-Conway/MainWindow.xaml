<Window x:Class="AIFH_Vol2_Conway.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conway's Game of Life" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="LightBlue" Orientation="Horizontal">
            <Button x:Name="ButtonStart" Height="26" VerticalAlignment="Top" Click="ButtonStart_Click">Start</Button>
            <Button x:Name="ButtonStop" Height="26" VerticalAlignment="Top" Click="ButtonStop_Click">Stop</Button>
            <Button x:Name="ButtonReset" Height="26" VerticalAlignment="Top" Click="ButtonReset_Click">Reset</Button>
        </StackPanel>
        <Canvas Grid.Row="1" x:Name="CanvasOutput"></Canvas>
    </Grid>
</Window>
