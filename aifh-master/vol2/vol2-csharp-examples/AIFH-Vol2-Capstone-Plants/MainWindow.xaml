<Window x:Class="AIFH_Vol2_Capstone_Plants.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plant Box Capstone" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Milestone1Seed" Click="Milestone1Seed_Click">Milestone 1: Draw Seed</Button>
        <Button Grid.Row="1" x:Name="Milestone2Grow" Click="Milestone2Grow_Click">Milestone 2: Grow a Plant</Button>
        <Button Grid.Row="2" x:Name="Milestone3Evolve" Click="Milestone3Evolve_Click">Milestone 3: Evolve Plants</Button>
    </Grid>
    
</Window>
